<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/expandable_list_row_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:id="@+id/expandable_list_title_layout">

        <TextView
            android:id="@+id/expandable_list_row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="U:PASSwrite for 31265 Communication for IT Professional"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandable_list_row_remove_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expandable_list_row_session_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="10"
                android:textColor="@color/colorRed"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" session"
                android:textColor="@color/colorRed"
                android:textSize="13sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/expand_image"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/expand_arrow" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"></View>


</LinearLayout>